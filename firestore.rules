/**
 * @fileoverview Firestore Security Rules for BoardPrep Pro.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for all data stored
 * under `/users/{userId}`.  Public read access is granted to the `/questions`
 * and `/quizzes` collections, as they are intended to be globally accessible.
 *
 * Data Structure:
 * - /users/{userId}:  Stores individual user profiles.
 * - /questions/{questionId}: Stores the questions themselves.
 * - /quizzes/{quizId}: Stores quiz definitions.
 * - /users/{userId}/quizAttempts/{quizAttemptId}: Stores quiz attempts for each user.
 * - /users/{userId}/attemptedQuestions/{attemptedQuestionId}: Stores attempted questions for each user.
 *
 * Key Security Decisions:
 * - User listing is denied to prevent information disclosure.
 * - Public read access is granted to questions and quizzes.
 * - Strict ownership is enforced for all user-related data.
 *
 * Denormalization for Authorization:
 *  - User ownership is verified by matching `request.auth.uid` against the `userId`
 *    path parameter in the rules. This avoids costly `get()` calls.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the request is made by a signed-in user.
     * @return {boolean} True if the user is signed in, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the request is made by the owner of the resource.
     * @param {string} userId The user ID to check against.
     * @return {boolean} True if the user is the owner, false otherwise.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the request is made by the owner of an existing resource.
     * @param {string} userId The user ID to check against.
     * @return {boolean} True if the user is the owner and the resource exists, false otherwise.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    /**
     * @description Rules for the /users/{userId} collection.
     * @path /users/{userId}
     * @allow (create) User xZ2vYcb2S7Mpi2yurWuLSn4rXQf2 can create their own user document.
     * @allow (get,update,delete) User xZ2vYcb2S7Mpi2yurWuLSn4rXQf2 can get, update, and delete their own user document.
     * @deny (create) User abc cannot create a document for user xyz.
     * @principle Enforces document ownership for writes.  Allows only the owner to read, update, or delete.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for the /questions/{questionId} collection.
     * @path /questions/{questionId}
     * @allow (get,list) Any user can read any question.
     * @deny (create,update,delete) No user can create, update, or delete a question.
     * @principle Allows public read access to questions, restricts all write access.
     */
    match /questions/{questionId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Rules for the /quizzes/{quizId} collection.
     * @path /quizzes/{quizId}
     * @allow (get,list) Any user can read any quiz.
     * @deny (create,update,delete) No user can create, update, or delete a quiz.
     * @principle Allows public read access to quizzes, restricts all write access.
     */
    match /quizzes/{quizId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Rules for the /users/{userId}/quizAttempts/{quizAttemptId} collection.
     * @path /users/{userId}/quizAttempts/{quizAttemptId}
     * @allow (create,get,list,update,delete) User xZ2vYcb2S7Mpi2yurWuLSn4rXQf2 can manage their own quiz attempts.
     * @deny (create,get,list,update,delete) User abc cannot manage user xyz's quiz attempts.
     * @principle Enforces document ownership for quiz attempts.
     */
    match /users/{userId}/quizAttempts/{quizAttemptId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for the /users/{userId}/attemptedQuestions/{attemptedQuestionId} collection.
     * @path /users/{userId}/attemptedQuestions/{attemptedQuestionId}
     * @allow (create,get,list,update,delete) User xZ2vYcb2S7Mpi2yurWuLSn4rXQf2 can manage their own attempted questions.
     * @deny (create,get,list,update,delete) User abc cannot manage user xyz's attempted questions.
     * @principle Enforces document ownership for attempted questions.
     */
    match /users/{userId}/attemptedQuestions/{attemptedQuestionId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }
  }
}